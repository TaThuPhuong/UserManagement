<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/pink_primary</item>
        <item name="colorPrimary">@color/blue_04</item>
        <item name="colorPrimaryDark">@color/blue_04</item>
        <item name="android:windowHideAnimation">@anim/fade_out</item>
        <item name="android:windowShowAnimation">@anim/fade_in</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor">@color/blue_04</item>
        <item name="android:navigationBarColor">@color/no_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UserManagement.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UserManagement.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>